@model IEnumerable<CustomerModel>

<div class="text-center">
    <h4 class="display-4">Customers List</h4>
</div>

<div class="card-deck">
    @foreach (CustomerModel customer in this.Model)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@customer.FirstName @customer.Surname</h5>
                <p class="card-text">Email: @customer.Email</p>
                <a asp-route-id="@customer.Id" asp-action="View" asp-controller="Home" asp-area="Customer" class="btn btn-primary">View</a>
            </div>
        </div>
    }
</div>